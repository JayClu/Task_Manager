<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    android:background="@drawable/bg_dialog_no_internet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_bold_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:text="@string/no_internet_connection"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_no_wifi"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_regular_400"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:text="@string/txt_content_dialog_no_internet"/>
    
    <TextView
        android:id="@+id/txtConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:layout_marginTop="24dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="36dp"
        android:background="@drawable/bg_btn_connect_dialog_no_internet"
        android:fontFamily="@font/manrope_regular_400"
        android:textColor="#252323"
        android:textSize="16sp"
        android:gravity="center"/>

</LinearLayout>